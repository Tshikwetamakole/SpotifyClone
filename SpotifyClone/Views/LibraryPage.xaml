<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpotifyClone.Views.LibraryPage"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*,Auto" 
          RowSpacing="0">

        <!-- Library Header Section -->
        <Grid Grid.Row="0" 
              RowDefinitions="Auto,Auto"
              Padding="20,10">

            <!-- Header with Profile -->
            <Grid ColumnDefinitions="Auto,*,Auto,Auto" 
                  ColumnSpacing="15">
                <Border StrokeShape="RoundRectangle 20"
                        HeightRequest="40"
                        WidthRequest="40"
                        BackgroundColor="#282828">
                    <Label Text="Y"
                           TextColor="White"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           FontSize="20"/>
                </Border>

                <Label Grid.Column="1"
                       Text="Your Library"
                       TextColor="White"
                       FontSize="24"
                       FontAttributes="Bold"
                       VerticalOptions="Center"/>

                <ImageButton Grid.Column="2"
                            Source="search.png"
                            HeightRequest="24"
                            WidthRequest="24"/>

                <ImageButton Grid.Column="3"
                            Source="plus.png"
                            HeightRequest="24"
                            WidthRequest="24"/>
            </Grid>

            <!-- Filter Pills -->
            <ScrollView Grid.Row="1" 
                       Margin="0,15,0,0" 
                       Orientation="Horizontal">
                <HorizontalStackLayout Spacing="8">
                    <Border StrokeShape="RoundRectangle 20"
                            BackgroundColor="#282828"
                            Padding="16,8">
                        <Label Text="Playlists"
                               TextColor="White"/>
                    </Border>
                    <Border StrokeShape="RoundRectangle 20"
                            BackgroundColor="#282828"
                            Padding="16,8">
                        <Label Text="Artists"
                               TextColor="White"/>
                    </Border>
                    <Border StrokeShape="RoundRectangle 20"
                            BackgroundColor="#282828"
                            Padding="16,8">
                        <Label Text="Albums"
                               TextColor="White"/>
                    </Border>
                    <Border StrokeShape="RoundRectangle 20"
                            BackgroundColor="#282828"
                            Padding="16,8">
                        <Label Text="Downloaded"
                               TextColor="White"/>
                    </Border>
                </HorizontalStackLayout>
            </ScrollView>
        </Grid>

        <!-- Library Content -->
        <CollectionView Grid.Row="1"
                        Margin="0,10,0,0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="20,10"
                          ColumnDefinitions="Auto,*"
                          ColumnSpacing="15">
                        <Border StrokeShape="RoundRectangle 4"
                                HeightRequest="56"
                                WidthRequest="56">
                            <Image Source="playlist_placeholder.png"
                                   Aspect="AspectFill"/>
                        </Border>

                        <VerticalStackLayout Grid.Column="1"
                                           VerticalOptions="Center"
                                           Spacing="4">
                            <Label Text="Playlist Name"
                                   TextColor="White"
                                   FontSize="16"/>
                            <Label Text="Playlist â€¢ User Name"
                                   TextColor="#B3B3B3"
                                   FontSize="14"/>
                        </VerticalStackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Navigation Bar -->
        <Grid Grid.Row="2" 
              BackgroundColor="#282828"
              ColumnDefinitions="*,*,*"
              HeightRequest="80"
              Padding="0,5,0,20">

            <!-- Home -->
            <VerticalStackLayout Grid.Column="0"
                               HorizontalOptions="Center"
                               Spacing="4">
                <Image Source="home.png"
                       HeightRequest="24"/>
                <Label Text="Home"
                       TextColor="#B3B3B3"
                       FontSize="12"/>
            </VerticalStackLayout>

            <!-- Search -->
            <VerticalStackLayout Grid.Column="1"
                               HorizontalOptions="Center"
                               Spacing="4">
                <Image Source="search.png"
                       HeightRequest="24"/>
                <Label Text="Search"
                       TextColor="#B3B3B3"
                       FontSize="12"/>
            </VerticalStackLayout>

            <!-- Library -->
            <VerticalStackLayout Grid.Column="2"
                               HorizontalOptions="Center"
                               Spacing="4">
                <Image Source="library.png"
                       HeightRequest="24"/>
                <Label Text="Library"
                       TextColor="White"
                       FontSize="12"/>
            </VerticalStackLayout>
        </Grid>

        <!-- Mini Player -->
        <Border Grid.Row="2"
                Margin="10,0,10,90"
                StrokeShape="RoundRectangle 8"
                BackgroundColor="#282828"
                Padding="12">
            <Grid ColumnDefinitions="Auto,*,Auto" 
                  ColumnSpacing="12">
                <Image Grid.Column="0"
                       Source="album_placeholder.png"
                       HeightRequest="40"
                       WidthRequest="40"
                       Aspect="AspectFill"/>
                <VerticalStackLayout Grid.Column="1" 
                                   Spacing="2"
                                   VerticalOptions="Center">
                    <Label Text="Current Track"
                           TextColor="White"
                           FontSize="16"/>
                    <Label Text="Artist"
                           TextColor="#B3B3B3"
                           FontSize="14"/>
                </VerticalStackLayout>
                <HorizontalStackLayout Grid.Column="2"
                                     Spacing="20"
                                     HorizontalOptions="End">
                    <ImageButton Source="play.png"
                                HeightRequest="32"
                                WidthRequest="32"/>
                </HorizontalStackLayout>
            </Grid>
        </Border>
    </Grid>
</ContentPage>