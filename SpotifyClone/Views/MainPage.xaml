<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpotifyClone.Views.MainPage"
             BackgroundColor="#121212"
             Title="Home">

    <Grid RowDefinitions="Auto, *, Auto">
        <!-- Top Bar -->
        <Grid Grid.Row="0" 
              Padding="20,40,20,10" 
              ColumnDefinitions="*, Auto, Auto"
              BackgroundColor="#121212">
            <Label Text="Good evening" 
                   TextColor="White" 
                   FontSize="24" 
                   FontAttributes="Bold"/>
            <ImageButton Grid.Column="1" 
                        Source="notification_white.png" 
                        HeightRequest="24" 
                        Margin="0,0,15,0"/>
            <ImageButton Grid.Column="2" 
                        Source="settings.png" 
                        HeightRequest="24"/>
        </Grid>

        <!-- Main Content Area -->
        <ScrollView Grid.Row="1" Margin="0,0,0,60">
            <VerticalStackLayout Spacing="24" Padding="20,0,20,20">
                <!-- Quick Access Grid -->
                <Grid ColumnDefinitions="*,*" 
                      RowDefinitions="Auto,Auto,Auto" 
                      RowSpacing="8" 
                      ColumnSpacing="8">
                    <Border Grid.Row="0" Grid.Column="0"
                            StrokeShape="RoundRectangle 4"
                            BackgroundColor="DarkRed">
                        <Grid ColumnDefinitions="Auto,*" Padding="8">
                            <Image Source="liked_songs.png" 
                                   HeightRequest="48" 
                                   WidthRequest="48"/>
                            <Label Grid.Column="1" 
                                   Text="Liked Songs" 
                                   TextColor="White"
                                   VerticalOptions="Center"
                                   Margin="8,0,0,0"/>
                        </Grid>
                    </Border>
                    <!-- Add 5 more similar Border elements for other quick access items -->
                </Grid>

                <!-- Recently Played Section -->
                <Label Text="Recently played"
                       TextColor="White"
                       FontSize="24"
                       FontAttributes="Bold"/>

                <CollectionView HeightRequest="200" 
                              HorizontalScrollBarVisibility="Never">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Horizontal" ItemSpacing="16"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border StrokeShape="RoundRectangle 8"
                                    BackgroundColor="#181818"
                                    HeightRequest="180"
                                    WidthRequest="160"
                                    Padding="12">
                                <Grid RowDefinitions="100,Auto,Auto" RowSpacing="8">
                                    <Border StrokeShape="RoundRectangle 4"
                                            Grid.Row="0"
                                            HeightRequest="100"
                                            WidthRequest="136">
                                        <Image Source="album1.png"
                                               Aspect="AspectFill"/>
                                    </Border>
                                    <Label Grid.Row="1"
                                           Text="{Binding Title}"
                                           TextColor="White"
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           LineBreakMode="TailTruncation"/>
                                    <Label Grid.Row="2"
                                           Text="{Binding Subtitle}"
                                           TextColor="#B3B3B3"
                                           FontSize="12"
                                           LineBreakMode="TailTruncation"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Jump Back In -->
                <Label Text="Jump back in"
                       TextColor="White"
                       FontSize="24"
                       FontAttributes="Bold"/>

                <CollectionView HeightRequest="200"
                              HorizontalScrollBarVisibility="Never">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Horizontal" ItemSpacing="16"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border StrokeShape="RoundRectangle 8"
                                    BackgroundColor="#181818"
                                    HeightRequest="180"
                                    WidthRequest="160"
                                    Padding="12">
                                <Grid RowDefinitions="100,Auto,Auto" RowSpacing="8">
                                    <Border StrokeShape="RoundRectangle 4"
                                            Grid.Row="0"
                                            HeightRequest="100"
                                            WidthRequest="136">
                                        <Image Source="{Binding ImageSource}"
                                               Aspect="AspectFill"/>
                                    </Border>
                                    <Label Grid.Row="1"
                                           Text="{Binding Title}"
                                           TextColor="White"
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           LineBreakMode="TailTruncation"/>
                                    <Label Grid.Row="2"
                                           Text="{Binding Description}"
                                           TextColor="#B3B3B3"
                                           FontSize="12"
                                           LineBreakMode="TailTruncation"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Made For You -->
                <Label Text="Made for you"
                       TextColor="White"
                       FontSize="24"
                       FontAttributes="Bold"/>

                <CollectionView HeightRequest="280"
                              HorizontalScrollBarVisibility="Never">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Horizontal" ItemSpacing="16"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border StrokeShape="RoundRectangle 8"
                                    BackgroundColor="#181818"
                                    HeightRequest="260"
                                    WidthRequest="180"
                                    Padding="12">
                                <Grid RowDefinitions="160,Auto,Auto,Auto" RowSpacing="8">
                                    <Border StrokeShape="RoundRectangle 4"
                                            Grid.Row="0"
                                            HeightRequest="160"
                                            WidthRequest="156">
                                        <Image Source="{Binding ImageSource}"
                                               Aspect="AspectFill"/>
                                    </Border>
                                    <Label Grid.Row="1"
                                           Text="{Binding Title}"
                                           TextColor="White"
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           LineBreakMode="TailTruncation"/>
                                    <Label Grid.Row="2"
                                           Text="{Binding Description}"
                                           TextColor="#B3B3B3"
                                           FontSize="12"
                                           LineBreakMode="TailTruncation"
                                           MaxLines="2"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Mini Player -->
        <Border Grid.Row="2"
                Margin="8,0,8,80"
                StrokeShape="RoundRectangle 6"
                BackgroundColor="#282828"
                Stroke="#404040"
                StrokeThickness="1"
                Padding="12,8">
            <Grid ColumnDefinitions="Auto,*,Auto" 
                  ColumnSpacing="12">
                <Border Grid.Column="0"
                        StrokeShape="RoundRectangle 4">
                    <Image Source="{Binding CurrentTrack.ImageSource}"
                           HeightRequest="40"
                           WidthRequest="40"
                           Aspect="AspectFill"/>
                </Border>
                <VerticalStackLayout Grid.Column="1" 
                                   Spacing="2"
                                   VerticalOptions="Center">
                    <Label Text="{Binding CurrentTrack.Title}"
                           TextColor="White"
                           FontSize="14"
                           FontAttributes="Bold"/>
                    <Label Text="{Binding CurrentTrack.Artist}"
                           TextColor="#B3B3B3"
                           FontSize="12"/>
                </VerticalStackLayout>
                <HorizontalStackLayout Grid.Column="2"
                                     Spacing="16"
                                     HorizontalOptions="End">
                    <ImageButton Source="library_white_selected.png"
                                HeightRequest="24"
                                WidthRequest="24"
                                Opacity="0.7"/>
                    <ImageButton Source="play_white.png"
                                HeightRequest="32"
                                WidthRequest="32"/>
                </HorizontalStackLayout>
            </Grid>
        </Border>

        <!-- Navigation Bar -->
        <Grid Grid.Row="2" 
              BackgroundColor="#282828"
              ColumnDefinitions="*,*,*"
              HeightRequest="80"
              Padding="0,5,0,20">

            <VerticalStackLayout Grid.Column="0"
                               HorizontalOptions="Center"
                               Spacing="4">
                <Image Source="home_white.png"
                       HeightRequest="24"/>
                <Label Text="Home"
                       TextColor="White"
                       FontSize="12"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="1"
                               HorizontalOptions="Center"
                               Spacing="4">
                <Image Source="search_white.png"
                       HeightRequest="24"
                       Opacity="0.7"/>
                <Label Text="Search"
                       TextColor="#B3B3B3"
                       FontSize="12"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="2"
                               HorizontalOptions="Center"
                               Spacing="4">
                <Image Source="library_white.png"
                       HeightRequest="24"
                       Opacity="0.7"/>
                <Label Text="Your Library"
                       TextColor="#B3B3B3"
                       FontSize="12"/>
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>